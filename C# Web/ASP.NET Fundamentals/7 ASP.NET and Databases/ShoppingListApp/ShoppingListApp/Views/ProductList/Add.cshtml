@using ShoppingListApp.Web.ViewModels.ProductList
@model CreateProductListViewModel

@{
    ViewData["Title"] = "Create a new product list";
}

<div class="form-container">
    <h2 style="text-align: center; color: #333; margin-bottom: 30px;">Създай Нов Продуктов Списък</h2>
    <hr />

    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Въведете име на списъка" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Въведете описание на списъка"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn-primary">Създай</button>
        </div>
    </form>

    <div style="text-align: center; margin-top: 20px;">
        <a asp-controller="ProductList" asp-action="Index">Обратно към Списъка</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
